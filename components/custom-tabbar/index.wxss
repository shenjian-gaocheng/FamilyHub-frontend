.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 62px;
  background: #fff;
  display: flex;
  border-top: 1px solid #eee;
  z-index: 1000;
}
.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.tab-icon { width: 26px; height: 26px; }
.tab-label { font-size: 11px; color: #666; margin-top: 2px; }

/* active state */
.tab-item.active .icon-wrap {
  background: rgba(27,115,232,0.08);
  border-radius: 8px;
  padding: 6px;
}
.tab-item.active .tab-icon {
  filter: none;
  opacity: 1;
}
.tab-item.active .tab-label {
  color: #1b73e8;
  font-weight: 700;
}
.tab-item .tab-icon { opacity: 0.6; transition: opacity .18s ease, transform .18s ease; }
.tab-item.active .tab-icon { transform: scale(1.08); }

