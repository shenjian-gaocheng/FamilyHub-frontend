<view class="page">
  <view class="section">
    <view class="section-header">
      <text class="title">饮食记录</text>
    </view>
    <textarea class="textarea" placeholder="用自然语言记录今日饮食，例如：早餐 燕麦+鸡蛋；午餐 清炒蔬菜+米饭" value="{{dietText}}" bindinput="onDietInput" />
  </view>

  <view class="section">
    <view class="section-header">
      <text class="title">睡眠</text>
      <view class="band" bindtap="onToggleBand">
        <text class="band-label">智能手环</text>
        <text class="band-status">{{hasBand ? '已连接' : '未连接（可手动录入）'}}</text>
      </view>
    </view>
    <view class="sleep-row">
      <text class="label">睡眠时长 (小时)</text>
      <slider min="0" max="12" step="0.5" value="{{sleepHours}}" bindchange="onSleepChange" show-value />
    </view>
  </view>

  <button class="primary" bindtap="onSubmit">保存记录</button>
</view>
