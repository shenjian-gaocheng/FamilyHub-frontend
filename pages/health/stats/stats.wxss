.page {
  padding: 14px 14px 24px;
  background: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.section {
  margin-bottom: 16px;
  background: #fff;
  border-radius: 12px;
  padding: 12px;
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.04);
}

.filters .row {
  display: flex;
  justify-content: space-between;
  padding: 8px 0;
  border-bottom: 1px solid #eef1f5;
}

.filters .row:last-child {
  border-bottom: none;
}

.label {
  font-size: 14px;
  color: #555;
}

.value {
  font-size: 14px;
  color: #1a73e8;
}

.title {
  font-size: 16px;
  font-weight: 700;
  color: #1a1a1a;
}

.chart-card {
  margin-top: 10px;
  padding: 10px;
  background: #f9fbff;
  border-radius: 10px;
  border: 1px solid #d9e7ff;
}

.chart-title {
  font-size: 14px;
  font-weight: 600;
  color: #1a1a1a;
}

.chart-desc {
  font-size: 12px;
  color: #667788;
  margin-top: 4px;
}

.chart-placeholder {
  margin-top: 8px;
  height: 120px;
  background: repeating-linear-gradient(45deg, #e5efff, #e5efff 10px, #f6f9ff 10px, #f6f9ff 20px);
  border-radius: 8px;
  color: #5d7bb0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
}

.note {
  margin-top: 6px;
  font-size: 12px;
  color: #667788;
}

.diet-row {
  margin-top: 8px;
  padding: 8px;
  background: #f7f9fc;
  border-radius: 8px;
}

.diet-date {
  font-size: 12px;
  color: #888;
}

.diet-content {
  margin-top: 4px;
  font-size: 13px;
  color: #333;
}

.index-header,
.index-row {
  display: flex;
  padding: 6px 0;
  border-bottom: 1px solid #eef1f5;
}

.index-header {
  font-weight: 600;
  color: #555;
}

.index-row {
  font-size: 13px;
  color: #333;
}

.col {
  flex: 1;
  text-align: center;
}

.col.name {
  flex: 1.4;
  text-align: left;
}

.delta {
  font-weight: 600;
}

