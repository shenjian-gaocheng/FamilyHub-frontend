.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.user-info {
  display: flex;
  align-items: center;
  background-color: white;
  margin: 20px;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.avatar {
  font-size: 48px;
  margin-right: 16px;
}

.info {
  flex: 1;
}

.name {
  display: block;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 4px;
}

.email {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 4px;
}

.role {
  display: block;
  font-size: 12px;
  color: #1b73e8;
  background-color: #e3f2fd;
  padding: 2px 8px;
  border-radius: 10px;
  display: inline-block;
}

.family-section {
  background-color: white;
  margin: 0 20px 20px 20px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.add-btn {
  font-size: 14px;
  color: #1b73e8;
  font-weight: 500;
}

.member-list {
  padding: 0 20px 20px 20px;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
}

.member-item:last-child {
  border-bottom: none;
}

.member-avatar {
  font-size: 32px;
  margin-right: 12px;
}

.member-info {
  flex: 1;
}

.member-name {
  display: block;
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 2px;
}

.member-email {
  display: block;
  font-size: 12px;
  color: #666;
}

.member-role {
  font-size: 12px;
  color: #1b73e8;
  background-color: #e3f2fd;
  padding: 2px 6px;
  border-radius: 8px;
}

.empty {
  text-align: center;
  padding: 40px 20px;
  color: #999;
  font-size: 14px;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1001;
  width: 90%;
  max-width: 400px;
}

.modal-content {
  background-color: white;
  border-radius: 12px;
  padding: 24px;
}

.modal-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 20px;
}

.input-group {
  margin-bottom: 16px;
}

.label {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
  font-weight: 500;
}

.input-box {
  height: 48px;
  padding: 0 16px;
  background: #f8f9fa;
  border: 2px solid #e9ecef;
  border-radius: 8px;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.input-box:focus-within {
  border-color: #1b73e8;
  background: #fff;
}

.input {
  flex: 1;
  font-size: 16px;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.ph {
  color: #adb5bd;
}

.password-box .input {
  padding-right: 32px;
}

.eye {
  position: absolute;
  right: 14px;
  font-size: 16px;
  color: #6c757d;
  cursor: pointer;
}

.modal-actions {
  display: flex;
  gap: 12px;
  margin-top: 24px;
}

.btn {
  flex: 1;
  height: 44px;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn.confirm {
  background: linear-gradient(135deg, #1b73e8 0%, #1565c0 100%);
  color: white;
}

.btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.btn:active {
  transform: scale(0.98);
}

.menu-list {
  margin-top: 20px;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: white;
  margin: 0 20px 10px 20px;
  padding: 16px 20px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.menu-text {
  font-size: 16px;
  color: #333;
}

.menu-arrow {
  font-size: 16px;
  color: #ccc;
}
