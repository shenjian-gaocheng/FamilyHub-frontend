/* pages/schedule/detail/detail.wxss */
.page {
  min-height: 100vh;
  background: #f5f7fa;
  display: flex;
  flex-direction: column;
  width: 100%; 
  box-sizing: border-box;
}
view, text, button, scroll-view {
  box-sizing: border-box;
}

/* 头部 */
.header {
  padding: 60rpx 32rpx 40rpx;
  background: linear-gradient(135deg, #4a90d9 0%, #2b6cb0 100%);
}

.header-content {
  position: relative;
}

.type-badge {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
  margin-bottom: 16rpx;
}

.task-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.status-badge {
  display: inline-block;
  padding: 10rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.status-badge.TODO {
  background: rgba(255, 255, 255, 0.9);
  color: #8aa4c8;
}

.status-badge.DOING {
  background: #FFE66D;
  color: #8B6914;
}

.status-badge.DONE {
  background: #4ade80;
  color: #166534;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 24rpx;
}

/* 分区 */
.section {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #1a3a5c;
  margin-bottom: 20rpx;
}

.icon {
  font-size: 32rpx;
}

.progress-text {
  margin-left: auto;
  font-size: 28rpx;
  color: #4a90d9;
}

.sub-count {
  margin-left: auto;
  font-size: 24rpx;
  color: #8aa4c8;
  font-weight: 400;
}

/* 时间信息 */
.time-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.time-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time-label {
  font-size: 28rpx;
  color: #8aa4c8;
}

.time-value {
  font-size: 28rpx;
  color: #1a3a5c;
  font-weight: 500;
}

/* 描述 */
.desc-content {
  font-size: 28rpx;
  color: #5a7a9a;
  line-height: 1.6;
}

/* 参与人员 */
.participants-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.participant-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 24rpx 16rpx 16rpx;
  background: #f8fafc;
  border-radius: 16rpx;
}

.participant-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.participant-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.participant-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a3a5c;
}

.participant-role {
  font-size: 22rpx;
  color: #8aa4c8;
}

/* 进度条 */
.progress-bar {
  height: 16rpx;
  background: #e8eef5;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

/* 子任务列表 */
.subtasks-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.subtask-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  transition: all 0.2s;
}

.subtask-item:active {
  background: #f0f4f8;
}

.subtask-item.completed {
  opacity: 0.7;
}

.subtask-checkbox {
  flex-shrink: 0;
}

.checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 3rpx solid #d0d8e0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #fff;
  transition: all 0.2s;
}

.checkbox.checked {
  background: #4ade80;
  border-color: #4ade80;
}

.subtask-content {
  flex: 1;
  min-width: 0;
}

.subtask-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #1a3a5c;
  margin-bottom: 6rpx;
}

.subtask-item.completed .subtask-title {
  text-decoration: line-through;
  color: #8aa4c8;
}

.subtask-time {
  font-size: 24rpx;
  color: #8aa4c8;
}

.subtask-status {
  flex-shrink: 0;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.subtask-status.TODO {
  background: #f0f4f8;
  color: #8aa4c8;
}

.subtask-status.DOING {
  background: #FFF3CD;
  color: #8B6914;
}

.subtask-status.DONE {
  background: #D1FAE5;
  color: #166534;
}

/* 操作按钮区域 */
.actions-section {
  padding: 20rpx 0;
  display: flex;
  flex-direction: row; /* 改为横向 */
  gap: 16rpx;          /* 调整间距 */
  width: 100%;
}

.action-btn {
  flex: 1;             /* 三个按钮平分宽度 */
  display: flex;
  flex-direction: column; /* 图标和文字上下排列，节省空间 */
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 8rpx; /* 减小内边距 */
  border-radius: 20rpx;
  font-size: 24rpx;    /* 稍微减小字号以容纳"标记为已完成" */
  font-weight: 500;
  border: none;
  line-height: 1.2;
}

.action-btn::after {
  border: none;
}

.action-icon {
  font-size: 32rpx;
}

.toggle-btn {
  background: #4ade80;
  color: #fff;
}

.edit-btn {
  background: #4a90d9;
  color: #fff;
}

.delete-btn {
  background: #fff;
  color: #e54d42;
  border: 2rpx solid #e54d42;
}

.action-btn:active {
  opacity: 0.85;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
}

.modal {
  position: fixed;
  left: 48rpx;
  right: 48rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
  border-radius: 32rpx;
  z-index: 100;
  overflow: hidden;
}

.modal-header {
  padding: 32rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f4f8;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a3a5c;
}

.modal-body {
  padding: 40rpx 32rpx;
}

.modal-text {
  font-size: 28rpx;
  color: #5a7a9a;
  line-height: 1.6;
  text-align: center;
}

.modal-actions {
  display: flex;
  border-top: 1rpx solid #f0f4f8;
}

.modal-btn {
  flex: 1;
  padding: 28rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  border-radius: 0;
  background: #fff;
}

.modal-btn::after {
  border: none;
}

.modal-btn.secondary {
  color: #5a7a9a;
  border-right: 1rpx solid #f0f4f8;
}

.modal-btn.danger {
  color: #e54d42;
}

.modal-btn:active {
  background: #f5f7fa;
}
