.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #e8f4fd 0%, #f5f7fa 30%);
  padding-bottom: 40px;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center; 
  padding: 18px; 
  background: linear-gradient(180deg, #d4e9ff 0%, #e8f4fd 100%);

  min-height: 44px; 
  box-sizing: border-box;
}


.header-left, .header-right {
  flex: 1;
  display: flex;
  align-items: center;
  width: 0;
  gap: 8px;
}

.header-right {
  justify-content: flex-end; 
}

.header-center {

  flex: 0 0 auto; 
  display: flex;
  align-items: center;
  gap: 8px;
  
  font-weight: bold;
  font-size: 16px;
  color: #333;
}

.back-btn, .today-btn {
  padding: 6px 12px; 
  font-size: 14px;
  color: #2b5c9a;
  background: rgba(255, 255, 255, 0.8);
  border: none;
  border-radius: 16px;
  line-height: 1.2;
  margin: 0; 
  display: inline-flex; 
  align-items: center;
  justify-content: center;
}

.back-btn::after, .today-btn::after {
  border: none;
}

.header-center {
  display: flex;
  align-items: center;
  gap: 8px;
}

.year-text, .month-text {
  font-size: 18px;
  font-weight: 600;
  color: #1a3a5c;
}

/* 月份导航 */
.month-nav {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24px;
  padding: 16px;
  background: #fff;
}

.nav-arrow {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: #5a8ac7;
  background: #f0f6fc;
  border-radius: 50%;
}

.nav-arrow:active {
  background: #e0ecf6;
}

.nav-title {
  font-size: 18px;
  font-weight: 600;
  color: #1a3a5c;
  min-width: 120px;
  text-align: center;
}

/* 星期标签 */
.week-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  background: #fff;
  border-bottom: 1px solid #e8eef5;
  padding: 12px 8px;
}

.week-cell {
  text-align: center;
  font-size: 14px;
  font-weight: 600;
  color: #6a8caa;
}

.week-cell .weekend {
  color: #e57373;
}

/* 日历网格 */
.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  background: #fff;
  padding: 8px;
  gap: 4px;
}

.day-cell {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 12px;
  position: relative;
  transition: all 0.2s;
}

.day-cell.other-month {
  opacity: 0.4;
}

.day-cell.selected {
  background: linear-gradient(135deg, #4a90d9 0%, #2b6cb0 100%);
}

.day-cell.selected .day-num {
  color: #fff;
}

.day-cell.has-task {
  background: #f0f8ff;
}

.day-cell.has-task.selected {
  background: linear-gradient(135deg, #4a90d9 0%, #2b6cb0 100%);
}

.day-num {
  font-size: 16px;
  font-weight: 500;
  color: #3a5a80;
}

.task-dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: #FF6B6B;
  margin-top: 4px;
}

.day-cell.selected .task-dot {
  background: #fff;
}

/* 图例 */
.legend {
  display: flex;
  justify-content: center;
  gap: 24px;
  padding: 16px;
  background: #fff;
  margin-top: 1px;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
  color: #6a8caa;
}

.legend-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
}

.legend-dot.has-task {
  background: #FF6B6B;
}

.legend-dot.selected {
  background: linear-gradient(135deg, #4a90d9 0%, #2b6cb0 100%);
}

/* 任务弹窗 */
.popup-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 99;
}

.task-popup {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 24px 24px 0 0;
  padding: 20px;
  padding-bottom: calc(20px + env(safe-area-inset-bottom));
  z-index: 100;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
  max-height: 60vh;
  display: flex;
  flex-direction: column;
}

.task-popup.show {
  transform: translateY(0);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16px;
  border-bottom: 1px solid #f0f4f8;
}

.popup-title {
  font-size: 18px;
  font-weight: 600;
  color: #1a3a5c;
}

.popup-close {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: #8aa4c8;
  background: #f5f7fa;
  border-radius: 50%;
}

/* 任务列表 */
.task-list {
  flex: 1;
  padding: 12px 0;
  max-height: 300px;
}

.task-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 14px;
  background: #f8fafc;
  border-radius: 12px;
  margin-bottom: 10px;
}

.task-item:active {
  background: #f0f4f8;
}

.task-color {
  width: 6px;
  height: 40px;
  border-radius: 3px;
}

.task-info {
  flex: 1;
}

.task-title {
  display: block;
  font-size: 15px;
  font-weight: 600;
  color: #1a3a5c;
  margin-bottom: 4px;
}

.task-time {
  font-size: 12px;
  color: #8aa4c8;
}

.task-status {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  border: 2px solid #e0e5ea;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: transparent;
}

.task-status.done {
  background: #4caf50;
  border-color: #4caf50;
  color: #fff;
}

.empty-tip {
  text-align: center;
  padding: 40px 0;
  color: #8aa4c8;
  font-size: 14px;
}

/* 添加任务按钮 */
.add-task-btn {
  width: 100%;
  padding: 14px 0;
  margin-top: 12px;
  font-size: 16px;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(135deg, #4a90d9 0%, #2b6cb0 100%);
  border: none;
  border-radius: 12px;
  box-shadow: 0 4px 12px rgba(43, 108, 176, 0.3);
}

.add-task-btn:active {
  opacity: 0.9;
}
