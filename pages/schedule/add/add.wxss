.page {
  min-height: 100vh;
  background: #f5f6f8;
  padding: 12px 12px 24px;
  box-sizing: border-box;
}

.form {
  background: #fff;
  border-radius: 12px;
  padding: 12px;
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.05);
}

.field {
  margin-bottom: 14px;
}

.label {
  font-size: 14px;
  color: #111;
  margin-bottom: 6px;
  display: block;
}

.required .label::after {
  content: '*';
  color: #e54d42;
  margin-left: 4px;
}

.input {
  width: 100%;
  height: 44px;
  padding: 0 10px;
  background: #f7f8fa;
  border-radius: 8px;
  font-size: 14px;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  min-height: 80px;
  padding: 8px 10px;
  background: #f7f8fa;
  border-radius: 8px;
  font-size: 14px;
  box-sizing: border-box;
}

.ph {
  color: #b2b2b2;
}

.row {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
  margin-bottom: 14px;
}

.card {
  background: #f7f8fa;
  border-radius: 10px;
  padding: 10px;
  box-sizing: border-box;
}

.small {
  font-size: 12px;
  color: #888;
}

.picker-text {
  margin: 4px 0;
  font-size: 15px;
  color: #1a73e8;
}

.note {
  font-size: 12px;
  color: #999;
}

.radio-row {
  display: flex;
  gap: 18px;
  align-items: center;
}

.radio {
  display: flex;
  align-items: center;
  gap: 6px;
}

.dot {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  border: 2px solid #c8c8c8;
  box-sizing: border-box;
}

.checked {
  border-color: #1a73e8;
  background: radial-gradient(circle, #1a73e8 60%, transparent 60%);
}

.radio-text {
  font-size: 14px;
  color: #444;
}

.submit {
  margin-top: 18px;
  background: #1a73e8;
  border: none;
}
