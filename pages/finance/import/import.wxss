.page {
  display:flex;
  align-items:flex-start;
  justify-content:center;
  padding: 20px;
  background: transparent;
}
.form {
  width: 100%;
  max-width: 720px;
  background: #fff;
  border-radius: 12px;
  padding: 18px;
  box-shadow: 0 8px 20px rgba(0,0,0,0.04);
}
.title {
  font-size: 18px;
  font-weight: 700;
  color: #222;
  margin-bottom: 12px;
}
.input-group { margin-bottom: 12px; }
.label { color:#666; font-size:13px; margin-bottom:6px; display:block;}
.textarea {
  width:100%;
  min-height:160px;
  border:1px solid #eaecef;
  border-radius:8px;
  padding:10px;
  box-sizing:border-box;
  font-size:13px;
  color:#333;
}
.actions { display:flex; gap:10px; margin-top:10px; }
.btn { padding:10px 14px; background:#1b73e8; color:#fff; border-radius:8px; }
.btn.cancel { background:#f5f5f5; color:#333; }
.result { margin-top:14px; background:#f8f9fa; padding:10px; border-radius:8px; color:#333; }

