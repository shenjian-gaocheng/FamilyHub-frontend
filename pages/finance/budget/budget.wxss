.page {
  padding: 14px 14px 24px;
  background: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.section {
  margin-bottom: 16px;
  background: #fff;
  border-radius: 12px;
  padding: 12px;
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.title {
  font-size: 16px;
  font-weight: 700;
  color: #1a1a1a;
}

.row {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
  align-items: end;
}

.col .label {
  font-size: 12px;
  color: #667788;
}

.input {
  margin-top: 6px;
  height: 36px;
  padding: 0 8px;
  background: #f7f8fa;
  border-radius: 8px;
  border: 1px solid #e1e4eb;
  box-sizing: border-box;
}

.value {
  display: block;
  margin-top: 6px;
  font-size: 16px;
  font-weight: 700;
  color: #1a1a1a;
}

.red {
  color: #e54d42;
}

.green {
  color: #0cb34a;
}

.progress {
  margin-top: 10px;
  height: 10px;
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
  border: 1px solid #e1e4eb;
}

.progress .bar {
  height: 100%;
  background: #1a73e8;
}

.progress .bar.over {
  background: #e54d42;
}

.progress.mini {
  height: 8px;
  margin-top: 6px;
}

.card {
  margin-top: 10px;
  padding: 10px;
  background: #f9fbff;
  border-radius: 10px;
  border: 1px solid #d9e7ff;
}

.card-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-title {
  font-size: 14px;
  font-weight: 600;
  color: #1a1a1a;
}

.card-amount {
  font-size: 12px;
  color: #667788;
}

.note {
  margin-top: 6px;
  font-size: 12px;
  color: #667788;
}

.primary {
  background: #1a73e8;
  color: #fff;
  border: none;
}
