<view class="page">
  <view class="section">
    <view class="section-header">
      <text class="title">月度预算 {{month}}</text>
      <button class="primary" bindtap="onSave" wx:if="{{isEditable}}">保存</button>
    </view>
    <view class="row">
      <view class="col">
        <text class="label">总预算</text>
        <input class="input" type="number" value="{{budget}}" bindinput="onBudgetInput" wx:if="{{isEditable}}" />
        <text class="value" wx:if="{{!isEditable}}">￥{{budgetFmt}}</text>
        <text class="small-note">总预算</text>
      </view>
      <view class="col">
        <text class="label">已用</text>
        <text class="value red">￥{{spentFmt}}</text>
        <text class="small-note">本月支出累计</text>
      </view>
      <view class="col">
        <text class="label">剩余</text>
        <text class="value green">￥{{leftFmt}}</text>
        <text class="small-note">可用</text>
      </view>
    </view>
    <view class="progress">
      <view class="bar {{percent > 100 ? 'over' : ''}}" style="width: {{percent}}%"></view>
    </view>
    <text class="note">已用 {{percent}}% </text>
  </view>

  <view class="section">
    <!-- 分项预算已移除；仅保留总预算 -->
  </view>
</view>
