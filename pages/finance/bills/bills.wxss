.page {
  padding: 14px 14px 24px;
  background: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.section {
  margin-bottom: 16px;
  background: #fff;
  border-radius: 12px;
  padding: 12px;
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.title {
  font-size: 16px;
  font-weight: 700;
  color: #1a1a1a;
}

.actions {
  display: flex;
  gap: 8px;
  align-items: center;
}

.row {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
}

.label {
  font-size: 12px;
  color: #667788;
}

.value {
  display: block;
  margin-top: 6px;
  font-size: 16px;
  font-weight: 700;
  color: #1a1a1a;
}

.red {
  color: #e54d42;
}

.green {
  color: #0cb34a;
}

.card {
  margin-top: 10px;
  padding: 12px;
  background: #f9fbff;
  border-radius: 10px;
  border: 1px solid #d9e7ff;
}

.primary {
  background: #1a73e8;
  color: #fff;
  border: none;
  padding: 6px 12px;
  border-radius: 8px;
  font-size: 13px;
}

.ghost {
  background: #f2f6ff;
  color: #1a73e8;
  border: 1px solid #d9e7ff;
  padding: 6px 10px;
  border-radius: 8px;
  font-size: 13px;
}

.danger {
  background: #e54d42;
  color: #fff;
  border: none;
}

.filter {
  padding: 8px 12px;
}

.chip-row {
  white-space: nowrap;
}

.chip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 8px 14px;
  margin-right: 8px;
  border-radius: 16px;
  background: #f3f5f8;
  color: #556;
  font-size: 13px;
}

.chip.active {
  background: #1a73e8;
  color: #fff;
}

.bill {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #eef1f5;
}

.bill:last-child {
  border-bottom: none;
}

.bill-left {
  display: flex;
  gap: 10px;
  align-items: center;
}

.icon-circle {
  width: 36px;
  height: 36px;
  border-radius: 18px;
  background: #ff7f50;
  color: #fff;
  text-align: center;
  line-height: 36px;
  font-weight: 700;
}

.member-picker {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 6px 10px;
  background: #fff;
  border-radius: 12px;
  border: 1px solid #e6eefc;
  color: #1a73e8;
  font-weight: 600;
  font-size: 13px;
  box-shadow: 0 6px 18px rgba(26,115,232,0.06);
}

.bill-info text {
  display: block;
}

.bill-merchant {
  font-size: 15px;
  color: #1a1a1a;
}

.bill-note {
  margin-top: 2px;
  font-size: 12px;
  color: #667788;
}

.bill-date {
  margin-top: 2px;
  font-size: 12px;
  color: #999;
}

.bill-amount {
  font-size: 16px;
  font-weight: 700;
}

.popup-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 9;
}

.popup {
  position: fixed;
  left: 12px;
  right: 12px;
  bottom: 20px;
  background: #fff;
  border-radius: 14px;
  padding: 14px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  z-index: 10;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.popup-title {
  font-size: 16px;
  font-weight: 700;
  color: #1a1a1a;
}

.popup-amount {
  font-size: 16px;
  font-weight: 700;
}

.popup-row {
  margin-top: 6px;
  font-size: 13px;
  color: #444;
}

.popup-actions {
  margin-top: 12px;
  display: flex;
  gap: 10px;
  justify-content: flex-end;
}
