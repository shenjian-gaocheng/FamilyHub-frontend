.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 24px 18px 40px;
  box-sizing: border-box;
}

.form {
  margin-top: 40px;
}

.input-box {
  margin-bottom: 18px;
  height: 56px;
  padding: 0 16px;
  background: #fff;
  border-radius: 28px;
  border: 1px solid #e4e6eb;
  display: flex;
  align-items: center;
  position: relative;
}

.input {
  flex: 1;
  font-size: 16px;
  color: #111;
}

.ph {
  color: #b0b0b0;
}

.password-box .input {
  padding-right: 32px;
}

.eye {
  position: absolute;
  right: 14px;
  font-size: 16px;
  color: #9aa0a6;
}

.actions {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 16px;
}

.link {
  font-size: 14px;
  color: #1a73e8;
}

.btn {
  margin-top: 8px;
  background: #0a63c9;
  color: #fff;
  border: none;
  height: 52px;
  border-radius: 26px;
  font-size: 18px;
}
