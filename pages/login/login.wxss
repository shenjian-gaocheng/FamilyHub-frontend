.page {
  min-height: 100vh;
  background: linear-gradient(135deg, #1b73e8 0%, #1565c0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  box-sizing: border-box;
}

.form {
  width: 100%;
  max-width: 400px;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  padding: 30px;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

.title {
  text-align: center;
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 30px;
}

.input-group {
  margin-bottom: 20px;
}

.label {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
  font-weight: 500;
}

.input-box {
  height: 50px;
  padding: 0 16px;
  background: #f8f9fa;
  border: 2px solid #e9ecef;
  border-radius: 12px;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.input-box:focus-within {
  border-color: #1b73e8;
  background: #fff;
}

.input {
  flex: 1;
  font-size: 16px;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.ph {
  color: #adb5bd;
}

.password-box .input {
  padding-right: 32px;
}

.eye {
  position: absolute;
  right: 14px;
  font-size: 16px;
  color: #6c757d;
  cursor: pointer;
}

.actions {
  margin-top: 30px;
  text-align: center;
}

.btn {
  width: 100%;
  height: 50px;
  background: linear-gradient(135deg, #1b73e8 0%, #1565c0 100%);
  color: #fff;
  border: none;
  border-radius: 12px;
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 16px;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(27, 115, 232, 0.3);
}

.btn:active {
  transform: scale(0.98);
  box-shadow: 0 2px 8px rgba(27, 115, 232, 0.4);
}

.link {
  font-size: 14px;
  color: #1b73e8;
  text-decoration: underline;
}
