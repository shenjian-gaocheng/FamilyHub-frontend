.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 24px 18px 40px;
  box-sizing: border-box;
}

.form {
  margin-top: 24px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #111;
  margin: 8px 0 12px;
}

.section-header {
  margin: 8px 0 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.add-btn {
  font-size: 14px;
  color: #0a63c9;
}

.input-box {
  margin-bottom: 14px;
  height: 56px;
  padding: 0 16px;
  background: #fff;
  border-radius: 28px;
  border: 1px solid #e4e6eb;
  display: flex;
  align-items: center;
  position: relative;
}

.input {
  flex: 1;
  font-size: 16px;
  color: #111;
}

.ph {
  color: #b0b0b0;
}

.password-box .input {
  padding-right: 32px;
}

.eye {
  position: absolute;
  right: 14px;
  font-size: 16px;
  color: #9aa0a6;
}

.card {
  margin-bottom: 14px;
  padding: 12px;
  border-radius: 16px;
  background: #fff;
  border: 1px solid #e4e6eb;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.card-title {
  font-size: 15px;
  font-weight: 600;
  color: #111;
}

.remove {
  font-size: 13px;
  color: #e53935;
}

.small {
  margin-bottom: 10px;
  height: 52px;
}

.empty {
  font-size: 13px;
  color: #9aa0a6;
  margin-bottom: 12px;
}

.actions {
  display: flex;
  justify-content: flex-start;
  margin: 6px 0 16px;
}

.link {
  font-size: 14px;
  color: #1a73e8;
}

.btn {
  margin-top: 8px;
  background: #0a63c9;
  color: #fff;
  border: none;
  height: 52px;
  border-radius: 26px;
  font-size: 18px;
}
